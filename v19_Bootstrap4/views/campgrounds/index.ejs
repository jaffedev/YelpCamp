<%- include("../partials/header") %>


<% if(currentUser && currentUser.isAdmin) { %>
	<h1>You're an admin!</h1>
<% } %>

	<header class="jumbotron">
		<div class="container">
			<h1>This is the campgrounds page</h1>
			<p>View our hand-picked campgrounds from all over the world!</p>
			<p><a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a></p	>
			<p>
			<form action="/campgrounds" method="GET" class="form-inline">
				<div class="form-group">
					<input type="text" name="search" placeholder="Campground search..." class="form-control">
					<input type="submit" value="Submit" class="btn btn-default">
				</div>
			</form>
			</p>
		</div>		
	</header>
	
	<!-- <div class="row">
		<div class="col-lg-12">
			<h3>Our most popular campgrounds!</h3>
		</div>
	</div> -->
	
	<div class="row display-flex row-eq-height">
		<% campgrounds.forEach(function(campground){ %>
			<div class="col-md-3 col-sm-6" style="margin-bottom:20px">
				<div class="thumbnail">
					<img class="img-thumbnail" src="<%=campground.image%>" style="height:250px;border:none">
					<div class="caption" style="border:none">
						<h4><%= campground.name %></h4>
					</div>
					<p>
						<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary" style="margin-left:10px">More Info</a>
					</p>
				</div>				
			</div>						   
		<% }) %>
	</div>



<%- include("../partials/footer") %>

